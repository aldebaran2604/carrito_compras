<h1>Lista de roles</h1>

<table id="indexroles" class="display table table-bordered">
  <thead class="bg-primary">
    <tr>
      <th>Nombre</th>
      <th>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.nombre %></td>
        <td><%= link_to 'Mostrar', role, :class => "btn btn-link" %>
        <%= link_to 'Editar', edit_role_path(role), :class => "btn btn-link" %>
        <%= link_to 'Eliminar', role, method: :delete, data: { confirm: 'Estas seguro de eliminarlo?' }, :class => "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_role_path, :class => "btn btn-link" %>
