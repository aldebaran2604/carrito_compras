<%= form_for(@user_profile) do |f| %>
  <% if @user_profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_profile.errors.count, "error") %> al guardar el perfil:</h2>

      <ul class="list-group">
      <% @user_profile.errors.full_messages.each do |message| %>
        <li class="list-group-item list-group-item-danger"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre, :class => "form-control"  %>
  </div>
  <div class="field">
    <%= f.label :apellido_paterno %><br>
    <%= f.text_field :apellido_paterno, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :apellido_materno %><br>
    <%= f.text_field :apellido_materno, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :fecha_nacimiento %><br>
    <%= f.text_field :fecha_nacimiento, :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.label :domicilio %><br>
    <%= f.text_field :domicilio, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", :class => "btn btn-primary" %>
  </div>
<% end %>